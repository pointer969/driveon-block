extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Settings
          li.breadcrumb-item Configurations
          li.breadcrumb-item.active Customers
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  New Customer
                    .card-body                                              
                      != messages()
                      form.form-horizontal(action='/customers/save', method='post')
                        .form-group
                          label.form-control-label(for='fullname') Business Name
                          .controls
                            .input-group
                              input#fullname.form-control(name='fullname',size='100', type='text')
                        .form-group
                          label.form-control-label(for='email') eMail
                          .controls
                            .input-group
                              input#email.form-control(name='email',size='100', type='email')
                        .form-group
                          label.form-control-label(for='businesscode') CPF / CNPJ
                          .controls
                            .input-group
                              input#businesscode.form-control(name='businesscode',size='20', type='text')
                        .form-group
                          label.form-control-label(for='address1') Address
                          .controls
                            .input-group
                              input#address1.form-control(name='address1',size='100', type='text')
                        .form-group
                          label.form-control-label(for='address2') Address Complement
                          .controls
                            .input-group
                              input#address2.form-control(name='address2',size='100', type='text')
                        .form-group
                          label.form-control-label(for='zipcode') ZIP
                          .controls
                            .input-group
                              input#zipcode.form-control(name='zipcode',size='16', type='text')
                        .form-group
                          label.form-control-label(for='district') District
                          .controls
                            .input-group
                              input#district.form-control(name='district',size='100', type='text')
                        .form-group
                          label.form-control-label(for='city') City
                          .controls
                            .input-group
                              input#city.form-control(name='city',size='16', type='text')                                    
                        .form-group
                          label.form-control-label(for='province') State
                          .controls
                            .input-group
                              input#province.form-control(name='province',size='16', type='text')
                        .form-group
                          label.form-control-label(for='country') Country
                          .controls
                            .input-group
                              input#country.form-control(name='country',size='16', type='text')                                                                   
                        .form-group
                          label.form-control-label(for='activedYN') Active?
                          .controls
                            //- .col-md-9
                            .input-group
                              select#select.form-control-sm(name='active')
                                option(value='true') Yes
                                option(value='false') No                                                   
                        .form-actions
                          button.btn.btn-sm.primary(type='submit') Save
                          span
                          a(href='/customers') 
                           button.btn.btn-sm.secondary(type='button') Cancel                                                                       