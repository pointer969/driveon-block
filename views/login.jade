    link(href='/css/login.css', rel='stylesheet')
    script(src='/js/login.js')
body
 .tile
  .tile-header
    h2(style='color: white; opacity: .75; font-size: 4rem; display: flex; justify-content: center; align-items: center; height: 100%;') UN1TY
  .tile-body
    != messages()
    form#form(role='form', action='/login', method='post')
      label.form-input
        i.material-icons person
        input#username(type='text', name='email',autofocus='true', required='yes',autocomplete='off')   
        span.label e-Mail
        span.underline
      label.form-input
        i.material-icons lock
        input#password(type='password', name='password', required='yes',autocomplete='off')
        span.label Password
        .underline
      .submit-container.clearfix(style='margin-top: 2rem;')
        button#gosubmit.btn.btn-irenic.float-right(type='submit',onclick="signIn()")  
          span Sign In
        #process-status.login-pending
          .spinner
            span.dot1
            span.dot2
